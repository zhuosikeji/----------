
.box{
  margin-top: 100rpx;
  padding: 0 40rpx;
}
.phone_number{
  display: flex;
  /* flex-direction: row; */
  /* background-color: red; */
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #ccc; 
}
.phone_number label{
  flex: 1;
  height: 100%;
  line-height: 80rpx;
}
.phone_number input{
  display: inline-block;
  flex: 3;
  height: 100%;
  line-height: 80rpx;
  font-size: 14px;
}
.verification_code{
  /* background-color: skyblue; */
  height: 80rpx;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
}
.verification_code label{

  /* background-color: red; */
  line-height: 80rpx;
  flex: 1;
  height: 100%;
  border-bottom: 1rpx solid #ccc;
}
.verification_code input{
  flex: 2;
  height: 100%;
  border-bottom: 1rpx solid #ccc; 
  /* font-size: 28rpx; */
  padding: 0;
  font-size: 14px;
}
.verification_code button{
  height: 80%;
  flex: 1;
  background-color: #F53F2C;
  font-size: 12px;
  color: #fff;
  line-height: 66rpx;
  padding: 0;

}
.next {
  margin-top: 100rpx;
}
.sure{
  background-color: #eee;
}
.hide{
 display: none;
 letter-spacing: 2rpx;
}
.show{ 
 display: block;
 letter-spacing: 2rpx;
}