
page {
  background-color: #f7f7f7;
}
/* 音频组件 */
.flex{
  display: flex;
}
.audioPlayer{
  width: 100%;
  height: 400rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}
.player{
  width: 100%;
  height: 100%;
  position: relative;
}
.audioBack{
  width: 100%;
  height: 100%;
}
.audioControls{
  width: 100%;
  height: 80rpx;
  background: black;
  opacity: .8;
  position: absolute;
  bottom: 0;
  color: white;
  font-size: 6pt;
  line-height: 80rpx;
  text-align: center;
}
.audioControls .bottom{
  width: 60rpx;
  height: 100%;
}
.audioControls .bottom image{
  margin-top: 30%;
  margin-left: 30%;
  width: 40rpx;
  height: 40rpx;
}
.audioControls .slider{
  width: 520rpx;
  height: 100%;
}
.slider slider{
  width: 95%;
  margin-left: 4%;
  margin-right: 0;
}
.audioControls .time{
  width: 120rpx;
  height: 100%;
}

/* 简介 */

button::after {
  border: none;
}

input {
  outline: none;
  border: none;
  list-style: none;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.section {
  width: 100%;
}

.section .video {
  width: 100%;
}

.section .btn-area {
  width: 96%;
  display: flex;
  flex-wrap: wrap;
  padding: 0 1%;
  background-color: #fff;
  border-radius: 40rpx;
  margin: 0 1%;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}

.section .btn-area input {
  width: 70%;
}

.introduction {
  width: 94%;
  margin: 0 3%;
  background-color: #fff;
}

.section .btn-area button {
  width: 30%;
  height: 60rpx;
  font-size: 16px;
  font-weight: 500;
  background-color: #f53f2c;
  color: #fff;
  margin: 0;
}

.section .vedioDescription {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 25rpx;
}

.section .vedioDescription .text {
  display: flex;
  flex-direction: column;
  font-size: 14px;
}

.section .vedioDescription .text .score {
  color: #f30;
}

.section .vedioDescription .jianjie {
  font-size: 14px;
  width: 80rpx;
  display: flex;
  flex-wrap: wrap;
}

.section .vedioDescription label {
  padding-top: 20rpx;
  width: 110rpx;
  display: flex;
}

.section .vedioDescription .name {
  font-size: 24px;
  font-weight: 600;
}

.section .vedioDescription image {
  width: 30rpx;
  height: 30rpx;
}

/* 下拉动画 */

#box {
  width: 100%;
  overflow: hidden;
  height: 0;
  animation-fill-mode: forwards;
  display: flex;
  flex-direction: column;
  font-weight: 500;
}

.description {
  width: 96%;
  font-size: 14px;
  height: 200rpx;
  color: #a8a8a8;
  padding: 2%
}

@keyframes slidedown {
  from {
    height: 0;
  }

  to {
    height: 200rpx;
  }
}

@keyframes slideup {
  from {
    height: 200rpx;
  }

  to {
    height: 0;
  }
}

.open {
  animation: slidedown 0.5s;
}

.close {
  animation: slideup 0.5s;
}

.hide {
  display: none;
}

.show {
  display: block;
}

/* 选集 */

.selectionbox {
  width: 100%;
  margin: 30rpx 20rpx;
  background-color: #fff;
}

.selectionbox .selection_text {
  display: flex;
  align-items: center;
  margin-left: 8rpx;
  font-size: 18px;
  font-weight: 600;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.selectionbox .selection_text image {
  width: 50rpx;
  height: 55rpx;
  margin: 0 15rpx -5rpx 15rpx;
}

.selectionbox .selection {
  height: 110rpx;
  font-size: 16px;
  font-weight: 500;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(99, 99, 99, 0.4);
  width: 98%;
  margin-left: 2%;
}
.selectionbox .selection .index{
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  font-size: 14px;
  margin-right: 20rpx;
  background-color: #DDD;
}
.selectionbox .colum{
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}
.selectionbox .time{
  font-size: 14px;
  color: #999;
}