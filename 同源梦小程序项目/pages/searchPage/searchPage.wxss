/* 公共样式 */

page {
  background-color: #f7f7f7;
  position: relative;
}

button::after {
  border: none;
}

input {
  outline: none;
  border: none;
  list-style: none;
}

/* 主题色 */

.themeColor {
  color: #f53f2c;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}
#region .section.mb60 {
  margin-bottom: 180rpx;
}
/* 头部 */

.header {
  height: 80rpx;
  width: 94%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  margin: 0 3%;
}

.header input {
  width: 80%;
  margin: 0 4%;
}

.header image {
  width: 40rpx;
  height: 40rpx;
}

.header .icon_search {
  /* margin-right: -30rpx; */
}

/* 分类 */

.contain {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}

.contain .category {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 94%;
  margin: 15rpx 3%;
  background-color: rgba(EE, EE, EE, 0.4);
}

.contain .active {
  color: #121212;
}

.contain .no-active {
  color: #b3b3b3;
}

/* 筛选区域 */

#region {
  background-color: #fff;
  width: 0;
  height: auto;
  position: absolute;
  top: 90rpx;
  right: 0;
  /* z-index: 100; */
  animation-fill-mode: forwards;
  -webkit-animation-fill-mode: forwards;
  overflow: hidden;
}

.section {
  width: 92%;
  margin: 20rpx 4%;
  overflow: auto;
}

.section .productTypes {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 15rpx;
}
.section .sectionHeader{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.section .sectionHeader .mlnone{
  margin-left: none;
}
.section .downArrow{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.section  label {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  font-size: 14px;
  align-items: center;
  margin-top: -20rpx;
}
.section .buttonGroup {
  display: flex;
  flex-wrap: wrap;
}

.section .buttonGroup button {
  font-size: 14px;
  font-weight: 500;
  width: 46%;
  margin: 10rpx 2%;
  height: 80rpx;
  border-radius: 70rpx;
  line-height: 80rpx;
}

.btnActive {
  border: 1px solid #f53f2c;
  color: #f53f2c;
}

.section .buttonGroup text {
  font-size: 6px;
  width: 30rpx;
  margin: 0 10rpx;
}

.section .buttonGroup input {
  font-size: 14px;
  font-weight: 300;
  width: 25%;
  height: 80rpx;
  background-color: #f6f6f6;
  border-radius: 70rpx;
  padding-left: 20%;
}
#categoryList {
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
  animation-fill-mode: forwards;
  height: auto;
}
.placeholdercenter {
  margin-left: -19%;
}
#productcategory {
  width: 29%;
  margin: 10rpx 1%;
  height: 80rpx;
}
#productcategory button {
  font-size: 14px;
  font-weight: 500;
  width: 100%;
  height: 100%;
  border-radius: 70rpx;
  line-height: 80rpx;
}
.regionFooter {
  display: flex;
  flex-wrap: wrap;
  margin-top: 100rpx;
  font-weight: 300;
  font-size: 16px;
}

.regionFooter button {
  width: 50%;
}

.regionFooter .reset {
  color: #999;
}

.regionFooter .determine {
  color: #fff;
  background-color: #f53f2c;
}

/* 动画 */

@keyframes slideleft {
  from {
    width: 0;
  }

  to {
    width: 85%;
  }
}

@keyframes slideright {
  from {
    width: 85%;
  }

  to {
    width: 0;
  }
}
@keyframes slideup {
  from {
    height: auto;
  }

  to {
    height: 90rpx;
  }
}

@keyframes slidedown {
  from {
    height: 90rpx;
  }

  to {
    height: auto;
  }
}
.up {
  animation: slideup 0.3s;
}

.down {
  animation: slidedown 0.3s;
}

.open {
  animation: slideleft 0.3s;
}

.close {
  animation: slideright 0.3s;
}

.hide {
  display: none;
}

.show {
  display: block;
}

/* 购物车 */

.boxSize {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 46%;
  margin: 25rpx 1%;
  padding: 0 1%;
  height: 600rpx;
  background-color: #fff;
}

.boxSize .activityImage {
  width: 100%;
  height: 60%;
}

.boxSize .sectionCenter {
  width: 100%;
  height: 20%;
  font-size: 14px;
  margin: 5% 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.boxSize .sectionFooter {
  height: 10%;
  width: 100%;
  font-weight: 500;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.boxSize .sectionFooter .collectionNumber {
  display: flex;
  align-items: center;
}

.boxSize .sectionFooter .money {
  color: #f30;
  font-size: 18px;
}

.boxSize .sectionFooter:first-child {
  margin-right: 80rpx;
}

.boxSize .sectionFooter image {
  margin: 0 10rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}
