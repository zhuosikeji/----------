/* 公共样式 */
page {
  background-color: #f7f7f7;
}
/* 主题色 */
.themeColor {
  color: #f53f2c;
}
.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 头部 */
.header {
  height: 80rpx;
  width: 94%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  margin: 0 3%;
}
.header image {
  width: 40rpx;
  height: 40rpx;
}
.header .icon_search {
  margin-right: -30rpx;
}
/* 分类 */
.contain {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}
.contain .category {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 94%;
  margin: 15rpx 3%;
  background-color: rgba(EE, EE, EE, 0.4);
}
.contain .active {
  color: #121212;
}
.contain .no-active {
  color: #B3B3B3;
}

.boxSize {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 46%;
  margin: 25rpx 1%;
  padding: 0 1%;
  height: 600rpx;
  background-color: #fff;
}
.boxSize .activityImage{
  width: 100%;
  height: 60%;
}
.boxSize .sectionCenter {
  width: 100%;
  height: 20%;
  font-size: 14px;
  margin: 5% 0; 
  display: flex;
  justify-content: center;
  align-items: center;
}
.boxSize .sectionFooter {
  height: 10%;
  width: 100%;
  font-weight: 500;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.boxSize .sectionFooter .collectionNumber{
  display: flex;
  align-items: center;
}
.boxSize .sectionFooter .money{
  color: #ff3300;
  font-size: 18px;
}
.boxSize .sectionFooter:first-child{
  margin-right: 80rpx;
}
.boxSize .sectionFooter image{
  margin: 0 10rpx;
}
.icon{
  width: 40rpx;
  height: 40rpx;
}