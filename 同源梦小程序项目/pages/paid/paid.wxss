
/* 头部分 */
.title{
  width: 100%;
  height: 214rpx;
  line-height: 214rpx;
  font-size: 48rpx;
  padding: 0 60rpx;
  color: #fff;
  background-color: rgba(255, 0, 0, 0.8);
}
.userInfo{
  padding:20rpx 40rpx;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}
.name{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  font-size: 34rpx;
}
.address{
  font-size: 32rpx;
  padding: 20rpx 20rpx;
  position: relative;
}
.map{
  width: 18px;
  height: 18px;
  position: absolute;
  left: -40rpx;
  top: 20rpx;
}

/* 中间部分 */
/* 商品信息 */
.content{
  padding-top: 20rpx;
  min-height: 800rpx;
  background-color: #f0f0f0;
}
.storename{
  padding-left: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
}
.storename image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  position: relative;
  top: 16rpx;
}
.goods{
  width: 100%;
  min-height: 400rpx;
  padding: 20rpx 40rpx 40rpx 260rpx;
  /* background-color: #f0f0f0; */
  box-sizing: border-box;
  position: relative;
}
.goods view{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}
.goodsPic{
  width:200rpx;
  height: 260rpx;
  position: absolute;
  left: 36rpx;
  top: 40rpx;
  z-index: 2;
}
.dis_pic{
  width: 70rpx;
  height: 66rpx;
}
.goodsprice{
  line-height: 3;
  font-size: 36rpx;
}
.goodsnumber{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color: red;
  font-size: 36rpx;
  margin-top: 10rpx;
}
.goodsBtn{
  width: 160rpx;
  color: red;
  border: 1px solid red;
  text-align: center;
  font-size: 24rpx;
  line-height: 36rpx;
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}
.backpaid{
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 40rpx;
  /* border-radius: 20rpx; */
  border: 2rpx solid #999;
  background-color: #fff;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.price{
  padding: 20rpx;
  background-color: #fff;
}
.confirm{
  font-size: 32rpx;
  color: #999;
  border-bottom: 2rpx solid #f0f0f0;
}
.confirm view{
  line-height: 2;
  display: flex;
  justify-content: space-between;
}

.price view:last-child{
  line-height: 2;
  display: flex;
  justify-content: space-between;
}
.black{
  font-size: 38rpx;
  color: #000;
 
}
.red{
  color: red;
}
.integral{
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.integral view:nth-child(1){
  padding-bottom: 20rpx;
  line-height: 2;
  border-bottom: 2rpx solid #f0f0f0;
}
.integral view:nth-child(1) text:nth-child(1){
  color: red;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  border: 2rpx solid red;
}
.integral view:nth-child(2){
  width: 180rpx;
  display: flex;
  margin: 20rpx auto;
  text-align: center;
  padding: 10rpx 40rpx;
  border: 2rpx solid #999;
}

/* 尾部分 */