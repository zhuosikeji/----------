page{
  background-color:#f0f0f0;
  }
.nav{
  width:100%;
  height:100rpx;
  display:flex;
  color: #999;
  flex-direction:row;
  background-color:#fff;
  border-bottom:1px solid #f0f0f0;
  }
.default{
  line-height:100rpx;
  text-align:center;
  flex:1;
  font-weight:bold;
  }
.red{
  line-height:100rpx;
  text-align:center;
  color:#fc5558;
  flex:1;
  font-weight:bold;
  border-bottom: 2rpx solid #fc5558
  }
.show{
  display:block;
  text-align:center;
  line-height:200rpx;
  background-color: #fff;
  }
.hidden{
  display:none;
  text-align:center;
  line-height:200px;
  background-color: #fff;
  }
  .between{
    display: flex;
    font-size: 36rpx;
    line-height: 2;
    text-align: left;
    padding: 20rpx;
    justify-content: space-between;
    border-bottom:1px solid #f0f0f0;
  }
  .column{
    display: flex;
    flex-direction: column;
  }
  .column text:nth-child(2){
    font-size: 32rpx;
    color: #999;
  }