.rechead {
  height: 60px;
  background: #f53f2c;
  width: 100%;
  color: #fff;
  position: relative;
  top: 0;
  left: 0;
}

.nickname, .integral-value {
  margin-left: 120px;
}

.nickname {
  font-size: 14px;
  line-height: 35px;
  font-weight: bold;
}

.integral-value {
  font-size: 12px;
  line-height: 20px;
}

.recomendimg {
  width: 98%;
  height: 240px;
  margin: 0 auto;
}

.recomendimg image {
  width: 100%;
  height: 240px;
}

.rechead image {
  width: 80px;
  height: 80px;
  position: absolute;
  left: 10px;
  top: 12px;
}

.scan-img {
  width: 100%;
  height: 140px;
  margin: 0 auto;
  padding-left: 50%;
  margin-left: -65px;
  margin-top: 20px;
}

.scan-img image {
  width: 130px;
  height: 130px;
}

.scanbrif {
  color: gray;
  text-align: center;
  font-size: 12px;
}

.pl5 {
  padding: 5px;
  font-size: 13px;
  line-height: 20px;
  color: gray;
}

.recoper, .directfan, .secfan {
  line-height: 40px;
  font-size: 14px;
  padding-left: 5px;
  border-bottom: 1px solid #eee;
}

.directfan image, .secfan image {
  width: 20px;
  height: 20px;
  float: right;
  margin-right: 10px;
  margin-top: 8px;
}

.recoperr {
  float: right;
  margin-right: 10px;
}
