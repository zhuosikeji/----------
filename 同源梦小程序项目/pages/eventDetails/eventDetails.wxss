/* 活动介绍开始了 */
.introduce{
    width: 94%;
    height: 85rpx;
    background-color: white;
    display: flex;
     justify-content:center ;
     align-items:center ;
     color: #089FFF;
     font-size: 40rpx;
     margin: 45rpx 25rpx;
}
.activity-details{
  width: 88%;
  /* height:300rpx; */
  line-height: 58rpx;
  font-size: 30rpx;
  color: #626262;
  background-color: white;
  flex-wrap:wrap; 
  margin: 0rpx 0rpx 25rpx 25rpx;
  padding: 20rpx;
  padding-bottom: 25rpx;
  border-radius: 5%;
  /*关键属性（必须有的）  */
  display: -webkit-box; 
  /*规定子元素的排列方向 */
  -webkit-box-orient: vertical; 
   /*限制文本显示的行数  */
  -webkit-line-clamp:5;
  /*实现多余的文字隐藏并用省略号来代表被隐藏的文字  */
  overflow: hidden;
  text-overflow:ellipsis;
}
.more {
     width: 100%;
     display: flex;
     justify-content:center ;
     align-items:flex-end ;
     color: #626262;
     font-size: 28rpx;
  }
/* 活动图片 */
